!!!5
%html{lang: "ja"}
  %head
    %meta{charset: "utf-8"}
    %meta{"http-equiv": "X-UA-Compatible", content: "IE=edge"}
    %meta{"http-equiv": "x-dns-prefetch-control", content: "on"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no"}
    
    %title Links | S--Minecraft
    %meta{name: "description", content: "S__Minecraftのポートフォリオです"}
    
    %script{src: "../lib/google.js", inline: true}
    
    %link{rel: "dns-prefetch preconnect", href: "//fonts.googleapis.com/"}
    %link{rel: "dns-prefetch preconnect", href: "//www.paper-glasses.com/"}
    %link{rel: "dns-prefetch preconnect", href: "//pbs.twimg.com/"}
    
    %link{rel: "stylesheet", href: "../lib/material.min.css"}
    %link{rel: "stylesheet", href: "https://fonts.googleapis.com/icon?family=Material+Icons"}
    
    %link{rel: "icon", sizes: "16x16 32x32 48x48 128x128 256x256", href: "../img/favicon.ico"}
    %link{rel: "stylesheet", href: "../css/core.css"}
  %body#links-page
    .mdl-layout.mdl-js-layout.mdl-layout--fixed-header
      -# Header
      %header.mdl-layout__header
        .mdl-layout__header-row
          %span.mdl-layout-title S--Minecraft
          .mdl-layout-spacer
          %nav.mdl-navigation.mdl-layout--large-screen-only
            %a.mdl-navigation__link{href: "../profile/"} Profile
            %a.mdl-navigation__link{href: "../works/"} Works
            %a.mdl-navigation__link{href: "../blog/"} Blog
            %a.mdl-navigation__link{href: "../contact/"} Contact
            %a.mdl-navigation__link{href: ""} Links
      -# Menu
      .mdl-layout__drawer
        %span.mdl-layout-title S--Minecraft
        %nav.mdl-navigation
          %a.mdl-navigation__link{href: "../"}
            %i.material-icons.md-18 home
            Top
          %a.mdl-navigation__link{href: "../profile/"}
            %i.material-icons.md-18 face
            Profile
          %a.mdl-navigation__link{href: "../works/"}
            %i.material-icons.md-18 dashboard
            Works
          %a.mdl-navigation__link{href: "../blog/"}
            %i.material-icons.md-18 subject
            Blog
          %a.mdl-navigation__link{href: "../contact/"}
            %i.material-icons.md-18 question_answer
            Contact
          %a.mdl-navigation__link{href: ""}
            %i.material-icons.md-18 call_split
            Links
      -# Content
      %main.mdl-layout__content
        #content
          #links-page-container.mdl-grid
            - each link in links
              .link.mdl-cell.mdl-cell--4-col.md-card.mdl-shadow--3dp
                .mdl-card__title
                  %h3= link.title
                .mdl-card__supporting-text
                  %p= link.desc
                .twiicon.text-center
                  .twiiconImg.loading.mdl-spinner.mdl-spinner--single-color.mdl-js-spinner.is-active{sn: link.twitter}
                  %p
                    %a{href: "https://twitter.com/" + link.twitter}= "@" + link.twitter
                .mdl-card__actions.mdl-card--border
                  %a{href: link.url}
                    %button.mdl-button.mdl-js-button.mdl-button--raised.mdl-button--colored.mdl-js-ripple-effect Go
      -# Footer
      %footer.mdl-mini-footer
        .mdl-mini-footer__left-section
          %p
            Powered by 
            %a{href: "http://gohugo.io/"} Hugo
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Hosted by 
            %a{href: "https://pages.github.com/"} GitHub Pages
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Using 
            %a{href: "http://www.getmdl.io/"} Material Design Lite
            \ and 
            %a{href: "https://github.com/S--Minecraft/ShortQuery.js/"} ShortQuery.js
          %p (C) 2015-2016 S__Minecraft
    
    %script{type: "text/javascript", src: "../lib/material.min.js", defer: true, async: true}
    %script{type: "text/javascript", src: "../lib/shortQuery.min.js", defer: true}
    %script{type: "text/javascript", src: "../js/links.js", defer: true}
