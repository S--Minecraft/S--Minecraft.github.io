- name = "Template"

!!!5
%html{lang: "ja"}
  %head{prefix: "og: http://ogp.me/ns# website: http://ogp.me/ns/website#"}
    %meta{charset: "utf-8"}
    %meta{"http-equiv": "X-UA-Compatible", content: "IE=edge"}
    %meta{"http-equiv": "x-dns-prefetch-control", content: "on"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}
    
    %title= name + " | " + general.sitename
    %meta{name: "description", content: general.desc}
    %meta{name: "twitter:card", content: "summary"}
    %meta{name: "twitter:site", content: general.twitter}
    %meta{name: "twitter:image", content: "https:"+general.baseurl+"img/favicon.png"}
    %meta{name: "msapplication-TileImage", content: "../img/favicon.png"}
    %meta{name: "msapplication-TileColor", content: general.color}
    %meta{name: "theme-color", content: general.color}
    %meta{property: "og:title", content: name}
    %meta{property: "og:site_name", content: general.sitename}
    %meta{property: "og:description", content: general.desc}
    %meta{property: "og:locale", content: "ja_JP"}
    %meta{property: "og:type", content: "website"}
    %meta{property: "og:url", content: "https:"+general.baseurl}
    %meta{property: "og:image", content: "http:"+general.baseurl+"img/favicon3.png"}
    %meta{property: "og:image:secure_url", content: "https:"+general.baseurl+"img/favicon3.png"}
    
    -# %script{src: "../lib/google.js", inline: true}
    
    %link{rel: "dns-prefetch preconnect", href: "//fonts.googleapis.com/"}
    
    %link{rel: "stylesheet", href: "../lib/material.min.css"}
    %link{rel: "stylesheet", href: "https://fonts.googleapis.com/icon?family=Material+Icons"}
    
    %link{rel: "icon shortcut mask-icon", sizes: "16x16 32x32 48x48 128x128 256x256", href: "../img/favicon.ico"}
    %link{rel: "apple-touch-icon fluid-icon", href: "../img/favicon.png"}
    %link{rel: "stylesheet", href: "../css/core.css"}
  %body#template-page
    .mdl-layout.mdl-js-layout.mdl-layout--fixed-header
      -# Header
      %header.mdl-layout__header
        .mdl-layout__header-row
          %span.mdl-layout-title= general.sitename
          .mdl-layout-spacer
          %nav.mdl-navigation.mdl-layout--large-screen-only
            %a.mdl-navigation__link{href: "../profile/"} Profile
            %a.mdl-navigation__link{href: "../works/"} Works
            %a.mdl-navigation__link{href: "../blog/"} Blog
            %a.mdl-navigation__link{href: "../contact/"} Contact
            %a.mdl-navigation__link{href: "../links/"} Links
      -# Menu
      .mdl-layout__drawer
        %span.mdl-layout-title= general.sitename
        %nav.mdl-navigation
          %a.mdl-navigation__link{href: "../"}
            %i.material-icons.md-18 home
            Top
          %a.mdl-navigation__link{href: "../profile/"}
            %i.material-icons.md-18 face
            Profile
          %a.mdl-navigation__link{href: "../works/"}
            %i.material-icons.md-18 dashboard
            Works
          %a.mdl-navigation__link{href: "../blog/"}
            %i.material-icons.md-18 subject
            Blog
          %a.mdl-navigation__link{href: "../contact/"}
            %i.material-icons.md-18 question_answer
            Contact
          %a.mdl-navigation__link{href: "../links/"}
            %i.material-icons.md-18 call_split
            Links
      -# Content
      %main.mdl-layout__content
        #content
        -# Footer
        %footer.mdl-mini-footer
          .mdl-mini-footer__left-section
            %p
              Powered by 
              %a{href: "http://gohugo.io/"} Hugo
              &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Hosted by 
              %a{href: "https://pages.github.com/"} GitHub Pages
              &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Using 
              %a{href: "http://www.getmdl.io/"} Material Design Lite
              \ and 
              %a{href: "https://github.com/S--Minecraft/ShortQuery.js/"} ShortQuery.js
            %p (C) 2015-2016 S__Minecraft
    
    %script{type: "text/javascript", src: "../lib/material.min.js"}
    %script{type: "text/javascript", src: "../lib/shortQuery.min.js"}
