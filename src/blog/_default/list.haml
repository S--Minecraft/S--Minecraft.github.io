!!!5
%html{lang: "ja"}
  %head
    %meta{charset: "utf-8"}
    %meta{"http-equiv": "X-UA-Compatible", content: "IE=edge"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no"}
    
    %title Section: |~~ .Title ~~| - Blog | S--Minecraft
    %meta{name: "description", content: "S__Minecraftのポートフォリオです"}
    
    %link{rel: "stylesheet", href: "../../lib/material.min.css"}
    %link{rel: "stylesheet", href: "https://fonts.googleapis.com/icon?family=Material+Icons"}
    %script{type: "text/javascript", src: "../../lib/material.min.js"}
    
    %link{rel: "icon", sizes: "16x16 32x32 48x48 128x128 256x256", href: "../../img/favicon.ico"}
    %link{rel: "stylesheet", href: "../../css/core.css"}
    
    %link{rel: "stylesheet", href: "../../lib/dark.css"}
    
    |~~ if .RSSlink ~~|
    %link{href: "|~~ .RSSlink ~~|", rel: "alternate", type: "application/rss+xml", title: "S--Minecraft.github.io"}
    %link{href: "|~~ .RSSlink ~~|", rel: "feed", type: "application/rss+xml", title: "S--Minecraft.github.io"}
    |~~ end ~~|
  %body
    .mdl-layout.mdl-js-layout.mdl-layout--fixed-header
      -# Header
      %header.mdl-layout__header
        .mdl-layout__header-row
          %span.mdl-layout-title S--Minecraft
          .mdl-layout-spacer
          %nav.mdl-navigation.mdl-layout--large-screen-only
            %a.mdl-navigation__link{href: "../../profile"} Profile
            %a.mdl-navigation__link{href: "../../works"} Works
            %a.mdl-navigation__link{href: "../../blog"} Blog
            %a.mdl-navigation__link{href: "../../contact"} Contact
      -# Menu
      .mdl-layout__drawer
        %span.mdl-layout-title S--Minecraft
        %nav.mdl-navigation
          %a.mdl-navigation__link{href: "../../"}
            %i.material-icons.md-18 home
            Top
          %a.mdl-navigation__link{href: "../../profile"}
            %i.material-icons.md-18 face
            Profile
          %a.mdl-navigation__link{href: "../../works"}
            %i.material-icons.md-18 dashboard
            Works
          %a.mdl-navigation__link{href: "../../blog"}
            %i.material-icons.md-18 subject
            Blog
          %a.mdl-navigation__link{href: "../../contact"}
            %i.material-icons.md-18 question_answer
            Contact
      -# Content
      %main.mdl-layout__content
        #content
          #blog-listpage-container
            %h2 List of Section: |~~ .Title ~~|
            %a{href: "|~~ .RSSlink ~~|", type: "application/rss+xml", target: "_blank"}
              .icon.rss{style: "zoom: 2"}
                %span
            -# ページめくり
            .paginator.text-center
              |~~ if .Paginator.HasPrev ~~|
              %a{href: "|~~ .Paginator.Prev.URL ~~|"}
                %button.mdl-button.mdl-js-button.mdl-js-ripple-effect <-
              |~~ else ~~|
              %button.mdl-button.mdl-js-button.mdl-js-ripple-effect{disabled: true} <-
              |~~ end ~~|
              %span Page |~~ .Paginator.PageNumber ~~|/|~~ .Paginator.TotalPages ~~|
              |~~ if .Paginator.HasNext ~~|
              %a{href: "|~~ .Paginator.Next.URL ~~|"}
                %button.mdl-button.mdl-js-button.mdl-js-ripple-effect ->
              |~~ else ~~|
              %button.mdl-button.mdl-js-button.mdl-js-ripple-effect{disabled: true} ->
              |~~ end ~~|
            -# 記事一覧
            #articles.mdl-grid
              |~~ range (.Paginator 1).Pages ~~|
              .mdl-cell.mdl-cell--4-col.mdl-card.mdl-shadow--3dp
                .mdl-card__title.mdl-card--expand
                  %h2.h4 |~~ .Title ~~|
                .mdl-card__supporting-text
                  .desc
                    |~~ .Summary ~~|
                  .time
                    %time{datetime: "|~~ .Date.Format ~~2006-01-02~~ ~~|"} |~~ .Date.Format ~~2006-01-02~~ ~~|
                .mdl-card__actions.mdl-card--border
                  %a.mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect{href: "|~~ .Permalink ~~|"} View
              |~~ end ~~|
            -# ページめくり2
            .paginator.text-center
              |~~ if .Paginator.HasPrev ~~|
              %a{href: "|~~ .Paginator.Prev.URL ~~|"}
                %button.mdl-button.mdl-js-button.mdl-js-ripple-effect <-
              |~~ else ~~|
              %button.mdl-button.mdl-js-button.mdl-js-ripple-effect{disabled: true} <-
              |~~ end ~~|
              %span Page |~~ .Paginator.PageNumber ~~|/|~~ .Paginator.TotalPages ~~|
              |~~ if .Paginator.HasNext ~~|
              %a{href: "|~~ .Paginator.Next.URL ~~|"}
                %button.mdl-button.mdl-js-button.mdl-js-ripple-effect ->
              |~~ else ~~|
              %button.mdl-button.mdl-js-button.mdl-js-ripple-effect{disabled: true} ->
              |~~ end ~~|
      -# Footer
      %footer.mdl-mini-footer
        .mdl-mini-footer__left-section
          %p (C) 2015 S__Minecraft
